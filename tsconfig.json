{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "node18",
    "moduleResolution": "node16",
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
  },
  "include": ["src"],
}
